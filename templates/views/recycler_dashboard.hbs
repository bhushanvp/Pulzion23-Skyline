<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/js/recycler_dashboard.js" async></script>
    <link rel="stylesheet" href="/css/dashboard.css">
    <title>Smart Waste Management</title>
</head>

<body>
    {{!-- {{>header}} --}}
    <div class="greet">Hello {{name}}</div>

    <hr>

    <br>

    <div class="accepted-requests-label">Accepted Requests</div>
    <table class="accepted-requests">
        <tr class="table-headings">
            <th>Order I.D.</th>
            <th>Waste Type</th>
            <th>Waste Quantity</th>
            <th>Pickup Time</th>
            <th>Producer ID</th>
            <th>Location</th>
            <th>Execute Order</th>
            {{! <th>Map</th> }}
        </tr>
        {{#each accepted_requests}}
        <tr class="accepted-request">
            <td>{{this.order_id}}</td>
            <td>{{this.waste_type}}</td>
            <td>{{this.waste_quantity}}</td>
            <td>{{this.pickup_date}}</td>
            <td>{{this.recycler_id}}</td>
            {{!-- <td id={{this.order_id}}>{{this.north_coordinate}}N,{{this.east_coordinate}}E</td> --}}
            <td><a href="https://www.google.com/maps/place/{{this.north_coordinate}}N+{{this.east_coordinate}}E"
                    target="_blank">
                    <div class="map-icon"><img class="map-icon" src="/images/map_icon.png" alt="Map Icon"></div>
                </a>
            </td>
            <td>
                <a href="/recycler/order/execute/{{this.order_id}}">
                    <input type="button" class="execute" id="execute" value="Execute">
                </a>
            </td>
        </tr>
        {{/each}}
    </table>

    <br>

    <hr>

    <br>

    <div class="available-requests-label">Available Requests</div>
    <table class="available-requests">
        <tr class="table-headings">
            <th>Order I.D.</th>
            <th>Waste Type</th>
            <th>Waste Quantity</th>
            <th>Pickup Time Requested</th>
            <th>Location</th>
            <th>Accept</th>
        </tr>

        {{#each available_requests}}
        <tr class="available-request">
            <td>{{this.order_id}}</td>
            <td>{{this.waste_type}}</td>
            <td>{{this.waste_quantity}}</td>
            <td>{{this.pickup_date}}</td>
            <td>
                <a href="https://www.google.com/maps/place/{{this.north_coordinate}}N+{{this.east_coordinate}}E"
                    target="_blank">
                    <div class="map-icon">
                        <img class="map-icon" src="/images/map_icon.png" alt="Map Icon">
                    </div>
                </a>
            </td>
            <td>
                <a href="/recycler/order/accept/{{this.order_id}}">
                    <input type="button" class="action" id="accept" value="Accept">
                </a>
            </td>
        </tr>
        {{/each}}

    </table>

    <br>

    <hr>

    <div class="pending-verification-requests-label">Pending Verification Requests</div>
    <table class="pending-verification-requests">
        <tr class="table-headings">
            <th>Order I.D.</th>
            <th>Waste Type</th>
            <th>Waste Quantity</th>
            <th>Execution Time</th>
            <th>Location</th>
            {{!-- <th>Accept</th> --}}
        </tr>

        {{#each pending_verification_requests}}
        <tr class="pending-verification-request">
            <td>{{this.order_id}}</td>
            <td>{{this.waste_type}}</td>
            <td>{{this.waste_quantity}}</td>
            <td>{{this.pickup_date}}</td>
            <td>
                <a href="https://www.google.com/maps/place/{{this.north_coordinate}}N+{{this.east_coordinate}}E" target="_blank">
                    <div class="map-icon">
                        <img class="map-icon" src="/images/map_icon.png" alt="Map Icon">
                    </div>
                </a>
            </td>
            {{!-- <td>
                <a href="/recycler/order/accept/{{this.order_id}}">
                    <input type="button" class="action" id="accept" value="Accept">
                </a>
            </td> --}}
        </tr>
        {{/each}}

    </table>

    <br>

    <hr>

    <div class="executed-requests-label">Executed Requests</div>
    <table class="executed-requests">
        <tr class="table-headings">
            <th>Order I.D.</th>
            <th>Waste Type</th>
            <th>Waste Quantity</th>
            <th>Executed On</th>
            <th>Location</th>
            {{!-- <th>Accept</th> --}}
        </tr>

        {{#each executed_requests}}
        <tr class="executed-request">
            <td>{{this.order_id}}</td>
            <td>{{this.waste_type}}</td>
            <td>{{this.waste_quantity}}</td>
            <td>{{this.pickup_date}}</td>
            <td>
                <a href="https://www.google.com/maps/place/{{this.north_coordinate}}N+{{this.east_coordinate}}E" target="_blank">
                    <div class="map-icon">
                        <img class="map-icon" src="/images/map_icon.png" alt="Map Icon">
                    </div>
                </a>
            </td>
        </tr>
        {{/each}}

    </table>
    <div id="execute-order-form">
        <form onsubmit="return validateOtp()" method="post">
            <button id="close-execute-form-button">X</button>
            <label for="otp">OTP</label>
            <input type="text" name="otp" id="otp" placeholder="Enter the OTP" required>
            <span id="no-otp"></span>

            <br>

            <button type="submit">Validate Order</button>
        </form>
    </div>

    <a href="/recycler/logout"><input type="button" value="logout" class="logout-btn" id="logout"></a>
    {{!-- {{>footer}} --}}
</body>

</html>